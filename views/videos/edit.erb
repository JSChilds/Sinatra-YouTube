<h1>Edit a video</h1>
<h3>Change the title or description for a video here.</h3>
<form action="/videos/<%= @video[:id] %>" method="POST">
	<input type="hidden" name="_method" value="PUT">
	<label for="title">Title</label>
	<input type="text" name="title" value="<%= @video[:title]%>">

	<label for="description">Description</label>
	<textarea name="description"><%= @video[:description]%></textarea> 

	<input type="submit" value="Edit Video">
</form>
